package javaapplication29;
import java.util.*;

/**
 *
 * @author deepika
 */
public class JavaApplication29 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=0;i<n;i++)
        {
            for(int j=i;j<n;j++)
            {
                System.out.print("*");
                
            }System.out.println();
        }
    }
    
}
 output:
4
****
***
**
*


